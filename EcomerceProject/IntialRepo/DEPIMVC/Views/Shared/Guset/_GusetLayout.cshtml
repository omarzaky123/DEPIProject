<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StyleHub - Modern Fashion</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <partial name="Guset/_CssLinksGusetPartial" />
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header-container">
            <a href="#" class="logo">Style<span>Hub</span></a>
            <nav>
                <ul>
                    <li><a  asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><a asp-action="Shop" asp-controller="Product" >Shop</a></li>
                    
                    <li><a href="#">About</a></li>
                   @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a asp-action="Register" asp-controller="Account" asp-route-Url="/Home/Index">Register</a></li>
                        <li><a asp-action="Login" asp-controller="Account" asp-route-Url="">Login</a></li>

                    }
                    else 
                    {
                        <li>@User.Identity.Name</li>
                        if (User.IsInRole("Guset"))
                        {
                            <li><a asp-action="ShowOrder" asp-controller="Order">Orders</a></li>
                        }

                        if (User.IsInRole("Admin"))
                        {
                            <li><a asp-action="Index" asp-controller="AdminWelcome">DashBoard</a></li>
                        }
                        <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>
                    }
                    <li class="cart-icon">
                        <a asp-action="ShowShopping" asp-controller="ShoppingCart" ><i class="fas fa-shopping-cart"></i></a>
                        <span class="cart-count">0</span>
                    </li>
                    <li class="login-icon">
                        <a href="#"><i class="fas fa-user"></i></a>
                    </li>
                </ul>
            </nav>
            <button class="mobile-menu-btn">☰</button>
        </div>
    </header>

    <!-- Mobile Menu -->
    <div class="mobile-menu">
        <div class="mobile-menu-header">
            <a href="#" class="logo">Style<span>Hub</span></a>
            <button class="close-menu">✕</button>
        </div>
        <nav class="mobile-nav">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Shop</a></li>
                <li><a href="#">Collections</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Cart</a></li>
                <li><a href="#">Login</a></li>
            </ul>
        </nav>
    </div>

    @RenderBody();
    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-column">
                <h3>StyleHub</h3>
                <p>
                    Your destination for trendy and affordable fashion that doesn't
                    compromise on quality. We bring you the latest styles from around
                    the world.
                </p>
                <div class="social-links">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-pinterest"></i></a>
                </div>
            </div>

            <div class="footer-column">
                <h3>Shop</h3>
                <ul>
                    <li><a href="#">Men's Fashion</a></li>
                    <li><a href="#">Women's Fashion</a></li>
                    <li><a href="#">Kids Collection</a></li>
                    <li><a href="#">Accessories</a></li>
                    <li><a href="#">New Arrivals</a></li>
                </ul>
            </div>

            <div class="footer-column">
                <h3>Customer Service</h3>
                <ul>
                    <li><a href="#">Contact Us</a></li>
                    <li><a href="#">Track Order</a></li>
                    <li><a href="#">Return & Exchange</a></li>
                    <li><a href="#">Shipping & Delivery</a></li>
                    <li><a href="#">FAQs</a></li>
                </ul>
            </div>

            <div class="footer-column">
                <h3>Information</h3>
                <ul>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms & Conditions</a></li>
                    <li><a href="#">Blog</a></li>
                    <li><a href="#">Store Locator</a></li>
                </ul>
            </div>
        </div>

        <div class="copyright">&copy; 2025 StyleHub. All Rights Reserved.</div>
    </footer>

    <script src="~/js/site.js">
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
